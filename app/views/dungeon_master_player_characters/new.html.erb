<h1>New Adventurer Form</h1> 

<%= form_with url: "/dungeon_masters/#{@dm.id}/player_characters", method: :post, local: true do |form| %>
  <h4><%= form.label :player_name %></h4>
  <p><%= form.text_field :player_name %></p>
  <h4><%= form.label :character_name %></h4>
  <p><%= form.text_field :character_name %></p>
  <h4><%= form.label :character_age %></h4>
  <p><%= form.text_field :character_age %></p>
  <h4><%= form.label :character_level %></h4>
  <p><%= form.text_field :character_level %></p>
  <h4><%= form.label :character_class %></h4>
  <p><%= form.text_field :character_class %></p>
  <h4><%= form.label :character_race %></h4>
  <p><%= form.text_field :character_race %></p>
  <h4>
    <%= form.label :is_alive %>
    <%= form.select :is_alive, [true, false] %>
  </h4>
  <p><%= form.submit "Create Adventurer" %></p>
<% end %>